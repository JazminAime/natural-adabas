DEFINE SUBROUTINE LLAMAR-SUB
MOVE #DEPARTAMENTO-M TO #COD-DEPT-P
RESET #DESC-P #COD-RETORNO-P
SET WINDOW 'DEP'
    CALLNAT 'SUBCODEP' #COD-DEPT-P #DESC-P #COD-RETORNO-P
        IF #COD-RETORNO-P EQ 1
        MOVE #COD-DEPT-P TO #DEPARTAMENTO-M
    END-IF
SET WINDOW OFF
END-SUBROUTINE
